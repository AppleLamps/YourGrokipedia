# Flask Configuration
# Required in production - used for session security
SECRET_KEY=YOUR_SECRET_KEY_HERE

# OpenRouter API Key
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=YOUR_KEY_HERE

# xAI API Key
# Required for Grokipedia edits mode and article generation
XAI_API_KEY=YOUR_XAI_API_KEY_HERE

# Firecrawl API Key
# Used for web scraping with clean markdown output
# Get your API key from: https://firecrawl.dev
FIRECRAWL_API_KEY=YOUR_FIRECRAWL_API_KEY_HERE

# Grokipedia API Configuration
# API URL (optional - defaults to Railway deployment)
# GROKIPEDIA_API_URL=https://grokipedia-api-production.up.railway.app
# API Key for Railway deployment (get from Railway environment variables)
GROKIPEDIA_API_KEY=YOUR_API_KEY_HERE

# SDK Configuration
# Set to 'true' to disable BK-Tree fuzzy search (uses less memory)
# GROKIPEDIA_LIGHTWEIGHT=false
